<!DOCTYPE html>
</html>
    <head>
        <title>Node.js-MySQL</title>
        <link href="/../stylesheets/style.css" rel="stylesheet">
        <script type="text/javascript" src="/../javascripts/all.js"></script>
    </head>
    <body>
        <div id="wrapper">
            <div class="page-header"><h2><%=page_title%></h2></div>
            <div class="page-container">
        <div class="page-data">
         <div class="data-btn">
           <button onClick="addUser();">+ Add</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>FName</th>
                    <th>Lname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>

                    <td><%=data[i].fname%></td>
                    <td><%=data[i].lname%></td>
                    <td><%=data[i].email%></td>
                    <td><%=data[i].phone%></td>
                    <td><%=data[i].city%></td>
                    <td>
                        <a class="a-inside edit" href="../edit/<%=data[i].id%>">Edit</a>
                       
                        <a class="a-inside delete" href="../delete/<%=data[i].id%>">Delete</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
    </div>
</div>
</body>
</html>

